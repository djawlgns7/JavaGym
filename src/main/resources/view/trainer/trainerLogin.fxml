<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.AnchorPane?>

<?import javafx.scene.text.Font?>

<?import javafx.scene.image.ImageView?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" stylesheets="/css/trainerLogin.css"
            fx:controller="controller.trainer.TrainerLoginController" prefHeight="800" prefWidth="550" >
    <VBox alignment="CENTER" prefHeight="600" prefWidth="450" spacing="20" layoutX="48" layoutY="100" styleClass="container">

        <Label text="JAVA GYM" styleClass="login_title_label" layoutX="100" layoutY="100">
            <font>
                <Font name="Anton-Regular"/>
            </font>
        </Label>
        <ImageView fx:id="profileImage" fitHeight="200" fitWidth="200" preserveRatio="true" />

        <VBox alignment="CENTER" spacing="30">
            <HBox alignment="CENTER" spacing="40">
                <TextField fx:id="idField" promptText="트레이너 아이디" />
            </HBox>

            <HBox alignment="CENTER" spacing="20">
                <PasswordField fx:id="passwordField" onAction="#login" promptText="트레이너 비밀번호"/>
            </HBox>

            <HBox alignment="CENTER" spacing="20" styleClass="Login_page_Btn">
                <Button text="로그인" onAction="#login" styleClass="loginBtn"/>
                <Button text="뒤로 가기" onAction="#goBack" styleClass="goBackBtn1"/>
            </HBox>
        </VBox>
    </VBox>
</AnchorPane>