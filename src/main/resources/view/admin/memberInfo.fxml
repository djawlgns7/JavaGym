<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<SplitPane dividerPositions="0.40" orientation="HORIZONTAL" prefHeight="700.0" prefWidth="1050.0"
           xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
           fx:controller="controller.admin.MemberInfoController">

    <items>

        <VBox fx:id="detailArea" spacing="20" alignment="CENTER">
            <Label text="회원 관리" />

            <HBox alignment="CENTER" spacing="10">
                <Label>이름</Label>
                <TextField fx:id="nameField"/>
            </HBox>

            <HBox alignment="CENTER" spacing="10">
                <Label>전화번호</Label>
                <TextField fx:id="phoneField" />
            </HBox>

            <HBox alignment="CENTER" spacing="10">
                <Label>성별</Label>
                <fx:define>
                    <ToggleGroup fx:id="genderRadio"/>
                </fx:define>
                <RadioButton fx:id="maleButton" text="남" toggleGroup="$genderRadio" />
                <RadioButton fx:id="femaleButton" text="여" toggleGroup="$genderRadio" />
            </HBox>

            <HBox alignment="CENTER" spacing="10">
                <Label>이메일</Label>
                <TextField fx:id="emailField" prefWidth="185" />
            </HBox>

            <HBox alignment="CENTER" spacing="10">
                <Label>생년월일</Label>
                <TextField fx:id="birthField" />
            </HBox>

            <HBox alignment="CENTER" spacing="10">
                <Button text="회원 등록" onAction="#addMember"/>
                <Button text="회원 수정" onAction="#updateMember"/>
                <Button text="회원 삭제" onAction="#deleteMember"/>
            </HBox>
            <Button text="뒤로 가기" onAction="#goBack"/>
        </VBox>

        <!-- 회원 목록 영역 -->
        <VBox fx:id="listArea" spacing="20" alignment="CENTER">
            <Label text="회원 정보" />
            <TableView fx:id="membersTable" prefHeight="550.0">
                <columns>
                    <TableColumn text="번호" fx:id="numCol" />
                    <TableColumn text="이름" fx:id="nameCol" />
                    <TableColumn text="성별" fx:id="genderCol" />
                    <TableColumn text="이메일" fx:id="emailCol" />
                    <TableColumn text="생년월일" fx:id="birthCol" />
                    <TableColumn text="전화번호" fx:id="phoneCol" />
                    <TableColumn text="가입일" fx:id="enrollCol" />
                </columns>
            </TableView>
        </VBox>

    </items>
</SplitPane>
